#include <stdio.h>

/*ここでするのは以下のテストである

  １、aの値
  ２、aのアドレス

  ３、Aの値
  ４、Aのアドレス

  ５、bの値
  ６、bのアドレス

  ７、Bの値
  ８、Bのアドレス

  ９、A = B とすることで何が起こるか

*/

void func(int *A, int *B) {
  printf("%d これは*A(aの値)です。\n", *A);
  puts("");

  printf("%d これは*B(bの値)です。\n", *B);
  puts("");

  printf("%p これはaのアドレス？それともAのアドレス？\n", A); //aのアドレス(Aの中身)
  puts("");

  printf("%p これはaのアドレス？それともAのアドレス？\n", &A); //Aのアドレス
  puts("");

  *A = 9;
  printf("%d これは*A(aの値)です。9に更新されました。\n", *A);
  puts("");
  //aの値は本当に9になった？(78行目参照)

  A = B;
  puts("A = B にしました。\n");

  printf("%p これはAのアドレス？Bのアドレス？bのアドレス？\n", A); //bのアドレス(Aの中身がBの中身(bのアドレス)になった)
  puts("");

  printf("%p これはBのアドレス？bのアドレス？\n", B); //bのアドレス(Bの中身)
  puts("");

  printf("%p これはBのアドレス？bのアドレス？\n", &B); //Bのアドレス
  puts("");

  printf("%d これは*A(bの値)です。\n", *A);
  //A = B とすることでAの中身（アドレス）が&bになり、*Aはbの値を指すことになった。つまりAの中身とBの中身が同じになった、*Aと*Bが同じになった。*Aと*Bが指す場所は同じになった。(=bの値)
  puts("");

  *A = 333;
  printf("%d *Aを333に更新しました。\n", *A);
  puts("");

  return;
}

int main(int argc, char **argv) {
  int a, b = 100;

  scanf("%d", &a);
  puts("↑入力しました\n");
  
  printf("%p\n", &a);
  puts("↑これはaのアドレスです。\n");

  printf("%p\n", &b);
  puts("↑これはbのアドレスです。\n");

  puts("関数開始\n");
  func(&a, &b);
  puts("関数終了\n");

  printf("%d aの値に変化はありますか？\n", a);
  puts("");
  //ない。

  printf("%d bの値に変化はありますか？\n", b);
  puts("");
  //*Aが更新されたのである。

  printf("%p\n", &a);
  puts("↑これはaのアドレスです。\n");
  //変化なし

  puts("Aと&aは違いますか？\n");
  //違います。AはA=Bのあと%pするとbのアドレス(Bの中身)になりました。&aは元のままです。

  a = 50;
  puts("aの値を50に更新しました。\n");

  printf("%d\n", b);
  puts("bの値に変化はありますか？\n");
  //ない。b自身または*A,*Bを更新しないと変化しない。
}
