#include <stdio.h>

int main(void) {
  char a[] = "Hello";
  for(int i = 0; i < sizeof(a)/sizeof(char); i++) {
    printf("%p  This is a[%d]'s address.\n", a+i, i);
    printf("%c  This is a[%d]'s character.\n", a[i], i);
    printf("%d  This is a[%d]'s ASCII(Dec.).\n", a[i], i);
    printf("%s", a);
    puts("");
  }
  

  return 0;
}
